{
  "manifest_version": 2,

  "name": "Currency Converter",
  "description": "This extension converts currencies on the page",
  "version": "1.0",
  "background": {
    "scripts": ["money.js", "background.js"]
  },
  "content_scripts": [ {
    "js": [ "jquery-3.1.0.min.js", "money.min.js", "content-script.js" ],
    "matches": [ "http://*/*", "https://*/*" ]
  } ],
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "permissions": [
    "tabs"
  ]
}